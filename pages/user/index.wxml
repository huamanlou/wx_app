<!--pages/user/index.wxml-->
<view class="page">
    <view class="page__bd">
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
                    <image src="{{userInfo.avatarUrl}}" style="width: 50px; height: 50px; display: block"/>
                    <!--<view class="weui-badge" style="position: absolute;top: -.4em;right: -.4em;">8</view>-->
                </view>
                <view class="weui-cell__bd">
                    <view>{{userInfo.nickName}}</view>
                    <!--<view style="font-size: 13px;color: #888888;">摘要信息</view>-->
                </view>
            </view>
        
            <view class="weui-cell weui-cell_access">
                <view class="weui-cell__bd">
                    <view style="display: inline-block; vertical-align: middle">我的优惠券</view>
                    <view class="weui-badge" style="margin-left: 5px;">8</view>
                </view>
                <view class="weui-cell__ft weui-cell__ft_in-access">查看详情</view>
            </view>
        </view>
    </view>
</view>