<!--index.wxml-->
<swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image"  />
    </swiper-item>
  </block>
</swiper>

<view class="container">
  <view>
    <image class="userinfo-avatar" src="{{logo}}" mode="aspectFit"></image>
  </view>

  <view>{{test}}</view>
  <view class="card">
    <block wx:for="{{products}}">
      <image class="card-pic" src="{{item.pic}}"  mode="aspectFit" bindtap="listClick" id="{{item.id}}"></image>
      <view>{{item.title}}</view>
      <view>{{item.abstract}}</view>
    </block>
  </view>
 
  <view id="tapTest" data-hi="MINA" bindtap="sendRequest"> Click me! </view>
</view>
